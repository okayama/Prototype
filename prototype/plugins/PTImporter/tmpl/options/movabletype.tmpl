
<label class="custom-control custom-radio">
<input id="movabletype_author_current" class="custom-control-input" type="radio" checked name="movabletype_author_setting" value="1">
<span class="custom-control-indicator"></span>
<span class="custom-control-description"><mt:trans phrase="Import as me" component="PTImporter"></span>
</label>
<label class="custom-control custom-radio">
<input id="movabletype_author_create" class="custom-control-input" type="radio" name="movabletype_author_setting" value="2">
<span class="custom-control-indicator"></span>
<span class="custom-control-description"><mt:trans phrase="Preserve original user" component="PTImporter"></span>
</label>
<div class="row form-group" id="movabletype_comment_status-wrapper">
  <div class="form-inline-padding form-inline col-lg-10 option-content">
    <label>
    <mt:trans phrase="Status for Comments:" component="PTImporter">
    <select class="form-control short" name="movabletype_comment_status">
        <option value="1"><mt:trans phrase="Disable"></option>
        <option value="2"><mt:trans phrase="Enable"></option>
    </select>
    </label>
  </div>
</div>

<div class="row form-group hidden" id="movabletype_password-wrapper">
  <div class="form-inline-padding form-inline col-lg-10 option-content hidden">
    <mt:trans phrase="Default password for new users:" component="PTImporter">
    <input id="movabletype_new_author_password" type="password" class="form-control" name="movabletype_new_author_password" value="">
  </div>
</div>
<script>
$('#movabletype_author_current').change(function(){
    if ( $(this).prop('checked') ) {
        $('#movabletype_password-wrapper').hide();
    }
});
$('#movabletype_author_create').change(function(){
    if ( $(this).prop('checked') ) {
        $('#movabletype_password-wrapper').show();
    }
});
$('#import-form').submit(function(){
    if ( $('#import_format').val() == 'movabletype' ) {
        if ( $('#movabletype_author_create').prop('checked') ) {
            if (! $('#movabletype_new_author_password').val() ) {
                alert('<mt:trans phrase="Enter a default password for new users." component="PTImporter">');
                // $('#save').removeClass('disabled');
                // $("#save").prop("disabled", false);
                $('#movabletype_new_author_password').focus();
                return false;
            }
        }
    }
    return true;
});
$('#movabletype_new_author_password').change(function(){
    if ( $(this).val() ) {
        if ( $('#movabletype_author_create').prop('checked') ) {
            $('#save').removeClass('disabled');
            $("#save").prop("disabled", false);
        }
    }
});
</script>