<mt:unless name="object_name">
<mt:setvar name="object_name" value="new_table">
</mt:unless>
<mt:if name="object_name" ne="table">
<mt:if name="object_name" ne="user">
<mt:if name="object_name" ne="relation">
<mt:if name="object_name" ne="workspace">
<div class="row form-group">
  <div class="col-lg-2 row-more">
  </div>
  <div class="col-lg-10 row-more">
    <input type="hidden" name="<mt:var name="name" escape>" value="0">
    <mt:ignore>Before checkbox, input hidden value="0"</mt:ignore>
    <label class="custom-control custom-checkbox">
    <input id="<mt:var name="name" escape>" class="form-control custom-control-input watch-changed"
    <mt:if name="readonly">onclick="return false;"</mt:if>
     type="checkbox" name="<mt:var name="name" escape>" value="1" <mt:if name="value">checked</mt:if>>
        <span class="custom-control-indicator"></span>
        <span class="custom-control-description"> 
        <mt:var name="label" escape></span>
    </label>

<span id="workspace-row-more-wrapper" class="hidden">
    <input type="hidden" name="display_space" value="0">
    <label class="custom-control custom-checkbox">
    <input id="display_space" class="custom-control-input"
     type="checkbox" name="display_space" value="1" <mt:if name="object_display_space">checked</mt:if>>
        <span class="custom-control-indicator"></span>
        <span class="custom-control-description"> 
        <mt:trans phrase="Display in WorkSpace"></span>
    </label>
    
    <input type="hidden" name="display_dashboard" value="0">
    <label id="display_dashboard-wrapper" class="custom-control custom-checkbox">
    <input id="display_dashboard" class="custom-control-input"
      <mt:if name="object_display_dashboard">checked</mt:if>
     type="checkbox" name="display_dashboard" value="1">
        <span class="custom-control-indicator"></span>
        <span class="custom-control-description"> 
        <mt:trans phrase="Display in Dashboard"></span>
    </label>

    <input type="hidden" name="allow_comment" value="0">
    <label id="display_dashboard-wrapper" class="custom-control custom-checkbox">
    <input id="display_dashboard" class="custom-control-input"
      <mt:if name="object_allow_comment">checked</mt:if>
     type="checkbox" name="allow_comment" value="1">
        <span class="custom-control-indicator"></span>
        <span class="custom-control-description"> 
        <mt:trans phrase="Accept Comments"></span>
    </label>
</span>
<script>
$("#space_child").click(function(){
    if ( $(this).prop('checked') == false ) {
        $("#workspace-row-more-wrapper").hide();
    } else {
        $("#workspace-row-more-wrapper").show();
    }
});
$("#display_space").click(function(){
    if ( $(this).prop('checked') == false ) {
        $("#display_dashboard").prop('checked',false);
        $("#display_dashboard-wrapper").hide();
    } else {
        $("#display_dashboard-wrapper").show();
    }
});
<mt:if name="object_space_child">
$("#workspace-row-more-wrapper").show();
</mt:if>
<mt:unless name="object_display_space">
$("#display_dashboard-wrapper").hide();
</mt:unless>
</script>
  </div>
</div>
</mt:if>
</mt:if>
</mt:if>
</mt:if>