<div class="row form-group">
  <div class="col-lg-2">
    <label for="<mt:var name="name" escape>">
    <mt:var name="label" escape="1">
    </label>
  </div>
  <div class="col-lg-10">
    <label class="custom-control custom-checkbox">
      <input name="manage_plugins" value="0" type="hidden">
      <input type="checkbox" id="can_rebuild" class="custom-control-input watch-changed" name="manage_plugins" value="1" <mt:if name="object_manage_plugins">checked</mt:if>>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description"><mt:trans phrase="$label"></span>
    </label>
  </div>
</div>