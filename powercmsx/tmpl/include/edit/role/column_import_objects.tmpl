<div class="row form-group">
  <div class="col-lg-2">
    <label for="import_objects">
    <mt:var name="label" escape="1">
    </label>
  </div>
  <div class="col-lg-10">
    <label class="custom-control custom-checkbox">
      <input name="import_objects" value="0" type="hidden">
      <input type="checkbox" id="import_objects" class="custom-control-input watch-changed" name="import_objects" value="1" <mt:if name="object_import_objects">checked</mt:if>>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description"><mt:trans phrase="$label"></span>
    </label>
  </div>
</div>