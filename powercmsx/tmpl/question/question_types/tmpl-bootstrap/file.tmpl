<mt:setvarblock name="error_name">question_<mt:var name="question_basename" escape>_error</mt:setvarblock>
<div class="row form-group<mt:if name="$error_name"> has-danger</mt:if>">
  <div class="col-lg-2">
    <label class="form-control-label" for="question_<mt:var name="question_basename" escape>">
      <mt:var name="question_label" escape>
      <mt:if name="question_required">
      <small><i class="fa fa-asterisk required text-muted" aria-hidden="true"></i>
      <span class="sr-only"><mt:trans phrase="Required"></span></small>
      </mt:if>
    </label>
  </div>
  <div class="col-lg-10">
    <mt:setvarblock name="param_name">filename_<mt:var name="question_basename" escape></mt:setvarblock>
    <mt:var name="$param_name" setvar="question_value">
    <mt:if name="confirm_ok">
      <mt:var name="question_value" escape>
    <mt:else>
    <input id="question_<mt:var name="question_basename" escape>" name="question_<mt:var name="question_basename" escape>" type="file" style="display:none">
    <div class="input-group">
      <input type="text" id="filename_<mt:var name="question_basename" escape>" class="form-control" placeholder="<mt:if name="question_placeholder"><mt:var name="question_placeholder" translate escape><mt:else><mt:trans phrase="Select File..."></mt:if>" value="<mt:var name="question_value" escape>">
      <span class="input-group-btn"><button type="button" class="btn btn-primary" onclick="$('input[id=question_<mt:var name="question_basename" escape>]').click();"><mt:trans phrase="Select..."></button></span>
    </div>
    </mt:if>
    <script>
      $('input[id=question_<mt:var name="question_basename" escape>]').change(function() {
        $('#filename_<mt:var name="question_basename" escape>').val($(this).val().replace("C:\\fakepath\\", ""));
      });
    </script>
  <mt:if name="question_hint">
  <div class="text-muted">
    <i class="fa fa-question-circle-o" aria-hidden="true"></i>
    <span class="sr-only"><mt:trans phrase="Hint"></span>
    <mt:var name="question_hint">
  </div>
  </mt:if>
  <mt:if name="$error_name">
  <div class="form-control-feedback">
    <mt:var name="$error_name" escape>
  </div>
  </mt:if>
  </div>
</div>
