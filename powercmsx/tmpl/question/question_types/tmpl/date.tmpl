      <mt:var name="question_vars" index="1" regex_replace="'/[^0-9]/',''" setvar="var_month">
      <mt:var name="question_vars" index="2" regex_replace="'/[^0-9]/',''" setvar="var_day">
      <mt:for from="$year_from" to="$year_to">
