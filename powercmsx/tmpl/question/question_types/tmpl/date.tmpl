<div style="margin-top: -1em;" class="row form-group<mt:if name="$error_name"> has-danger</mt:if>">
  <div class="col-lg-2">
  </div>
  <div class="col-lg-10">
  <div class="form-control-feedback">
    <mt:var name="$error_name" escape>
