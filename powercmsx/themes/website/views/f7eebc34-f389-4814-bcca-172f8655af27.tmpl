}
.card .btn {
  background: none;
}
a {
  color: #55b;
}
.badge {
  font-weight: normal !important;
}
.plain-style a {
  color: #444 !important;
  background: linear-gradient(transparent 80%, #ddd 100%);
}
.list-main a {
