{
    "label"       : "LivePreview",
    "id"          : "livepreview",
    "component"   : "LivePreview",
    "version"     : "2.0",
    "author"      : "Alfasado Inc.",
    "author_link" : "https://alfasado.net/",
    "description" : "It provides site preview in future.",
    "cfg_template": "cfg_template.tmpl",
    "cfg_system"  : 1,
    "cfg_space"   : 1,
    "settings"    : {
        "livepreview_page_url"      : "",
        "livepreview_date_based"    : "entry",
        "livepreview_insert_html"   : "",
        "livepreview_status_pending" : 1
    },
    "menus": {
        "live_preview": {
            "display_system" : 1,
            "display_space" : 1,
            "component"  : "LivePreview",
            "mode"       : "live_preview",
            "label"      : "Live Preview",
            "permission" : "can_livepreview",
            "order"      : 200
        }
    },
    "hooks": {
        "livepreview_post_init": {
            "post_init" : {
                "component" : "LivePreview",
                "priority"  : 1,
                "method" : "post_init"
            }
        }
    },
    "tags": {
        "conditional": {
            "iflivepreview" : {
                "component" : "LivePreview",
                "method" : "hdlr_if_livepreview"
            },
            "iflivepreviewinpending" : {
                "component" : "LivePreview",
                "method" : "hdlr_if_livepreview_inpending"
            }
        },
        "function": {
            "livepreviewdate" : {
                "component" : "LivePreview",
                "method" : "hdlr_livepreview_date"
            }
        }
    },
    "upgrade_functions": {
        "live_preview": {
            "version_limit" : 1.0,
            "component"  : "LivePreview",
            "method"  : "live_preview_upgrade"
        }
    },
    "methods": {
        "live_preview": {
            "component"  : "LivePreview",
            "permission" : "can_livepreview",
            "method"     : "live_preview"
        }
    }
}