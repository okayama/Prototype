<label class="custom-control custom-radio">
<input id="noren_author_current" class="custom-control-input" type="radio" checked name="noren_author_setting" value="1">
<span class="custom-control-indicator"></span>
<span class="custom-control-description"><mt:trans phrase="Import as me" component="EntryImporter"></span>
</label>
<mt:ifusercan action="create" model="user">
<label class="custom-control custom-radio">
<input id="noren_author_create" class="custom-control-input" type="radio" name="noren_author_setting" value="2">
<span class="custom-control-indicator"></span>
<span class="custom-control-description"><mt:trans phrase="Preserve original user" component="EntryImporter"></span>
</label>
<div class="row form-group hidden" id="noren_password-wrapper">
  <div class="form-inline-padding form-inline col-lg-10 option-content hidden">
    <mt:trans phrase="Default password for new users:" component="EntryImporter">
    <input id="noren_new_author_password" type="password" class="form-control" name="noren_new_author_password" value="">
  </div>
</div>
</mt:ifusercan>
<script>
<mt:ifusercan action="create" model="user">
$('#noren_author_current').change(function(){
    if ( $(this).prop('checked') ) {
        $('#noren_password-wrapper').hide();
    }
});
$('#noren_author_create').change(function(){
    if ( $(this).prop('checked') ) {
        $('#noren_password-wrapper').show();
    }
});
</mt:ifusercan>
$('#import-form').submit(function(){
    if ( $('#import_format').val() == 'noren' ) {
        <mt:ifusercan action="create" model="user">
        if ( $('#noren_author_create').prop('checked') ) {
            if (! $('#noren_new_author_password').val() ) {
                alert('<mt:trans phrase="Enter a default password for new users." component="EntryImporter">');
                $('#noren_new_author_password').focus();
                return false;
            }
        }
        </mt:ifusercan>
    }
    return true;
});
<mt:ifusercan action="create" model="user">
$('#noren_new_author_password').change(function(){
    if ( $(this).val() ) {
        if ( $('#noren_author_create').prop('checked') ) {
            $('#save').removeClass('disabled');
            $("#save").prop("disabled", false);
        }
    }
});
</mt:ifusercan>
</script>
<hr style="margin-bottom:1.5em" />
<div>
<label class="custom-control custom-radio">
<input class="custom-control-input" type="radio" checked name="noren_keywords_to" value="1">
<span class="custom-control-indicator"></span>
<span class="custom-control-description"><mt:trans phrase="Import Keywords" component="EntryImporter"></span>
</label>
<label class="custom-control custom-radio">
<input class="custom-control-input" type="radio" name="noren_keywords_to" value="2">
<span class="custom-control-indicator"></span>
<span class="custom-control-description"><mt:trans phrase="Keywords to Tags" component="EntryImporter"></span>
</label>
<label class="custom-control custom-radio">
<input class="custom-control-input" type="radio" name="noren_keywords_to" value="3">
<span class="custom-control-indicator"></span>
<span class="custom-control-description"><mt:trans phrase="Keywords to Keywords and Tags" component="EntryImporter"></span>
</label>
</div>
<hr style="margin-bottom:1.2em" />
<div class="form-inline">
<mt:trans phrase="Text Format"> : 
    <select id="noren_text_format" name="noren_text_format" class="form-control short">
      <option value=""><mt:trans phrase="None"></option>
      <option value="convert_breaks" <mt:if name="object_text_format" eq="convert_breaks">selected</mt:if>><mt:trans phrase="Convert Line Breaks"></option>
      <option value="markdown" <mt:if name="object_text_format" eq="markdown">selected</mt:if>><mt:trans phrase="Markdown"></option>
      <mt:ignore><option value="markdown_with_smartypants" <mt:if name="object_text_format" eq="markdown_with_smartypants">selected</mt:if>>Markdown + SmartyPants</option></mt:ignore>
      <option value="richtext" <mt:if name="object_text_format" eq="richtext">selected</mt:if>><mt:trans phrase="RichText"></option>
      <mt:ignore><option value="textile_2" <mt:if name="object_text_format" eq="textile_2">selected</mt:if>><mt:trans phrase="Textile 2"></option></mt:ignore>
    </select>
</div>
<hr style="margin-bottom:1.5em" />
<div>
<textarea id="noren_field_settings" name="noren_field_settings" rows="4" class="form-control" placeholder="ns_field_name1=text
ns_field_name2=text
ns_field_name3=keywords
"><mt:var name="cookie.pt-noren_field_settings" escape></textarea>
  <p class="text-muted hint-block">
    <i class="fa fa-question-circle-o" aria-hidden="true"></i>
    <span class="sr-only"><mt:trans phrase="Hint"></span>
    <mt:trans phrase="Write 1 line 1 setting .Field name of NOREN=Field name of PowerCMS X(Duplicates are merged)." component="EntryImporter">
  </p>
</div>
<script>
$('#import-form').submit(function(){
    var settings = $('#noren_field_settings').val();
    document.cookie = 'pt-noren_field_settings=' + encodeURIComponent( settings ) + ';max-age=319740000'; 
    return true;
});
</script>