  <div class="col-lg-2">
    <label for="setting_members_unsubscribe_timeout">
      <mt:trans phrase="Timeout for Unsubscribe" component="Members">
    </label>
  </div>
  <div class="col-lg-10">
    <input type="number" id="setting_members_unsubscribe_timeout" name="setting_members_unsubscribe_timeout" class="form-control short" value="<mt:var name="setting_members_unsubscribe_timeout" escape>">
