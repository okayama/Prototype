  <div class="col-lg-2">
    <label for="setting_members_sign_up_expires">
      <mt:trans phrase="Session expires for Sign Up" component="Members">
    </label>
  </div>
  <div class="col-lg-10">
    <input type="number" id="setting_members_sign_up_expires" name="setting_members_sign_up_expires" class="form-control short" value="<mt:var name="setting_members_sign_up_expires" escape>">
  </div>
</div>
