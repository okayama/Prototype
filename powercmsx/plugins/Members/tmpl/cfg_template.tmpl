  </div>
</div>
<div class="row form-group">
  <div class="col-lg-2">
    <label for="setting_members_sess_timeout">
      <mt:trans phrase="Login Session Timeout" component="Members">
    </label>
  </div>
  <div class="col-lg-10">
    <input type="number" id="setting_members_sess_timeout" name="setting_members_sess_timeout" class="form-control short" value="<mt:var name="setting_members_sess_timeout" escape>">
  </div>
</div>

<div class="row form-group">
  <div class="col-lg-2">
    <label for="setting_members_sign_up_timeout">
      <mt:trans phrase="Timeout for Sign Up" component="Members">
    </label>
  </div>
  <div class="col-lg-10">
    <input type="number" id="setting_members_sign_up_timeout" name="setting_members_sign_up_timeout" class="form-control short" value="<mt:var name="setting_members_sign_up_timeout" escape>">
