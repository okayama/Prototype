<div class="row form-group">
  <div class="col-lg-2">
    <label for="setting_members_sign_up_status">
      <mt:trans phrase="Member's status at Sign Upped" component="Members">
    </label>
  </div>
  <div class="col-lg-10">
    <select class="form-control custom-select short" name="setting_members_sign_up_status" id="setting_members_sign_up_status">
      <option value="1" <mt:if name="setting_members_sign_up_status" eq="1">selected</mt:if>><mt:trans phrase="Disable"></option>
      <option value="2" <mt:if name="setting_members_sign_up_status" eq="2">selected</mt:if>><mt:trans phrase="Enable"></option>
    </select>
  </div>
</div>
<div class="row form-group">
  <div class="col-lg-2">
    <label for="setting_members_sign_up_normarize">
      <mt:trans phrase="Normarize member's data" component="Members">
