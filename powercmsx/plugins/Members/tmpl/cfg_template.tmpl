<div class="row form-group">
  <div class="col-lg-2">
    <label for="setting_members_app_url">
      <mt:trans phrase="App URL" component="Members">
    </label>
  </div>
  <div class="col-lg-10">
    <input type="text" id="setting_members_app_url" name="setting_members_app_url" class="form-control" value="<mt:var name="setting_members_app_url" escape>">
  </div>
</div>
<div class="row form-group mb-0 mt-4">
  <div class="col-lg-12">
    <input type="hidden" name="setting_members_allow_login" value="0">
    <label class="custom-control custom-checkbox">
    <input id="setting_members_allow_login" class="custom-control-input watch-changed"
     type="checkbox" name="setting_members_allow_login" value="1" <mt:if name="setting_members_allow_login">checked</mt:if>>
        <span class="custom-control-indicator"></span>
        <span class="custom-control-description"> 
        <mt:trans phrase="Allow Login" component="Members"></span>
    </label>
  </div>
</div>
<div class="row form-group mb-0">
  <div class="col-lg-12">
    <input type="hidden" name="setting_members_allow_sign_up" value="0">
    <label class="custom-control custom-checkbox">
    <input id="setting_members_allow_sign_up" class="custom-control-input watch-changed"
     type="checkbox" name="setting_members_allow_sign_up" value="1" <mt:if name="setting_members_allow_sign_up">checked</mt:if>>
        <span class="custom-control-indicator"></span>
        <span class="custom-control-description"> 
        <mt:trans phrase="Allow Sign Up" component="Members"></span>
    </label>
  </div>
</div>
<div class="row form-group">
  <div class="col-lg-12">
    <input type="hidden" name="setting_members_two_factor_auth" value="0">
    <label class="custom-control custom-checkbox">
    <input id="setting_members_two_factor_auth" class="custom-control-input watch-changed"
     type="checkbox" name="setting_members_two_factor_auth" value="1" <mt:if name="setting_members_two_factor_auth">checked</mt:if>>
        <span class="custom-control-indicator"></span>
        <span class="custom-control-description"> 
        <mt:trans phrase="Two-factor Authentication"></span>
    </label>
  </div>
</div>
<div class="row form-group">
  <div class="col-lg-2">
    <label for="setting_members_non_editable_cols">
      <mt:trans phrase="Non-editable columns" component="Members">
    </label>
  </div>
  <div class="col-lg-10">
    <input type="text" id="setting_members_non_editable_cols" name="setting_members_non_editable_cols" class="form-control" value="<mt:var name="setting_members_non_editable_cols" escape>">
    <div class="text-muted hint-block">
      <i class="fa fa-question-circle-o" aria-hidden="true"></i>
      <span class="sr-only"><mt:trans phrase="Hint"></span>
      <mt:trans phrase="Please enter comma-separated column names." component="Members">
    </div>
  </div>
</div>
<div class="row form-group">
  <div class="col-lg-2">
    <label for="setting_members_email_from">
      <mt:trans phrase="Mail From">
    </label>
  </div>
  <div class="col-lg-10">
    <input type="text" id="setting_members_email_from" name="setting_members_email_from" class="form-control" value="<mt:var name="setting_members_email_from" escape>">
  </div>
</div>
<div class="row form-group">
  <div class="col-lg-2">
    <label for="setting_members_sign_up_notify_mailto">
      <mt:trans phrase="Email address to Sign Up notification" component="Members">
